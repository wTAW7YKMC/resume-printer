/* pages/test/test.wxss */
.container {
  padding: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.loading, .error {
  text-align: center;
  padding: 40rpx;
  font-size: 32rpx;
}

.error {
  color: #ff0000;
}

.content {
  margin-top: 20rpx;
}

.section {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}