/* pages/experience/experience.wxss */
.experience-list {
  margin-top: 20rpx;
}

.experience-item {
  border-left: 6rpx solid #1890ff;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.item-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}

.company-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.company-logo image {
  width: 60rpx;
  height: 60rpx;
}

.company-info {
  flex: 1;
}

.company-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.job-title {
  font-size: 28rpx;
  color: #1890ff;
  margin-bottom: 5rpx;
}

.work-period {
  font-size: 24rpx;
  color: #888;
}

.toggle-icon {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
  transition: transform 0.3s ease;
}

.toggle-icon.expanded {
  transform: translateY(-50%) rotate(180deg);
}

.item-content {
  font-size: 28rpx;
  line-height: 1.6;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.item-content.expanded {
  max-height: 2000rpx;
}

.job-description {
  margin-bottom: 20rpx;
  color: #555;
}

.sub-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0 10rpx;
}

.responsibility-item, .achievement-item {
  display: flex;
  margin-bottom: 10rpx;
}

.bullet {
  color: #1890ff;
  margin-right: 10rpx;
  font-weight: bold;
}

.text {
  flex: 1;
}

.skills-used {
  margin-top: 20rpx;
}

.skill-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.skill-tag {
  background-color: #e6f7ff;
  color: #1890ff;
  border-radius: 30rpx;
  padding: 6rpx 16rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-state image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}