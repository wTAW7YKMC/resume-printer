/* 全局字符编码设置 */
@charset "utf-8";

/* 确保所有文本元素使用正确的字体 */
page, text, view, input, textarea, button {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', SimSun, '宋体', sans-serif !important;
}

/* 防止字符编码问题 */
* {
  font-variant: normal;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}