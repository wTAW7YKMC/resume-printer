/* 全局样式 */
page {
  background-color: #3e2723;
  font-family: 'Courier New', 'Courier Prime', monospace;
  color: #212121;
  line-height: 1.6;
  letter-spacing: 0.5rpx;
}

.container {
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* 打字机机身装饰 */
.typewriter-body {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 120rpx;
  background-color: #5d4037;
  border-radius: 10rpx 10rpx 0 0;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 打字机滚筒 */
.typewriter-roller {
  width: 80%;
  height: 60rpx;
  background-color: #3e2723;
  border-radius: 5rpx;
  position: relative;
}

.typewriter-roller::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 10%;
  right: 10%;
  height: 2rpx;
  background-color: #8b4513;
  transform: translateY(-50%);
}

/* 纸张容器 */
.paper-container {
  background-color: #f5f1e6;
  padding: 140rpx 30rpx 40rpx;
  border-radius: 0;
  box-shadow: none;
  position: relative;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
  margin: 0;
  
  /* 添加纸张纹理 */
  background-image: 
    linear-gradient(rgba(245, 241, 230, 0.8), rgba(245, 241, 230, 0.8)),
    repeating-linear-gradient(
      0deg,
      transparent,
      transparent 39rpx,
      rgba(139, 69, 19, 0.03) 39rpx,
      rgba(139, 69, 19, 0.03) 40rpx
    );
}

/* 标题样式 */
.title {
  font-size: 60rpx;
  font-weight: bold;
  color: #5d4037;
  margin-bottom: 40rpx;
  text-align: center;
  font-family: 'Courier New', 'Courier Prime', monospace;
  position: relative;
  padding-top: 20rpx;
  letter-spacing: 1rpx;
  text-shadow: 0.5rpx 0.5rpx 0 #8b4513;
}

/* 光标闪烁动画 */
.cursor {
  display: inline-block;
  animation: blink 1s infinite;
  color: #3e2723;
  font-weight: bold;
}

/* 打字机内容样式 */
.typing-content {
  font-family: 'Courier New', 'Courier Prime', monospace;
  font-size: 24rpx;
  line-height: 1.6;
  color: #3e2723;
  white-space: pre-wrap;
  letter-spacing: 0.5rpx;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  border-bottom: 2rpx dashed #8b4513;
  padding-bottom: 20rpx;
}

.nav-item {
  font-size: 28rpx;
  color: #5d4037;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  transition: all 0.3s ease;
  font-family: 'Courier New', 'Courier Prime', monospace;
  letter-spacing: 0.8rpx;
}

.nav-item.active {
  background-color: #8b4513;
  color: #f5f1e6;
  box-shadow: 0 4rpx 8rpx rgba(139, 69, 19, 0.3);
}

.content-area {
  min-height: 400rpx;
}

/* 区块样式 */
.section {
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dashed #a0826d;
}

/* 联系方式样式 */
.contact-info {
  margin-top: 40rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #a0826d;
  opacity: 0.8;
}

.contact-item {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 24rpx;
}

.contact-label {
  color: #8b4513;
  margin-right: 10rpx;
  font-family: 'Courier New', 'Courier Prime', monospace;
  letter-spacing: 0.5rpx;
}

.contact-value {
  color: #5d4037;
  font-family: 'Courier New', 'Courier Prime', monospace;
  letter-spacing: 0.5rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #8b4513;
  color: #3e2723;
  font-family: 'Courier New', 'Courier Prime', monospace;
  letter-spacing: 0.8rpx;
}

/* 信息项样式 */
.info-item {
  margin-bottom: 20rpx;
  display: flex;
}

.label {
  width: 120rpx;
  color: #5d4037;
  font-weight: bold;
  font-family: 'Courier New', 'Courier Prime', monospace;
  letter-spacing: 0.5rpx;
}

.value {
  flex: 1;
  color: #3e2723;
  font-family: 'Courier New', 'Courier Prime', monospace;
  letter-spacing: 0.5rpx;
}

/* 经验/教育项样式 */
.experience-item, .education-item {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx dashed #8b4513;
}

.experience-item:last-child, .education-item:last-child {
  border-bottom: none;
}

.item-title {
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #3e2723;
  font-family: 'Courier New', 'Courier Prime', monospace;
  letter-spacing: 0.6rpx;
}

.item-subtitle {
  font-size: 24rpx;
  color: #5d4037;
  margin-bottom: 15rpx;
  font-style: italic;
  font-family: 'Courier New', 'Courier Prime', monospace;
  letter-spacing: 0.5rpx;
}

.item-description {
  font-size: 24rpx;
  color: #3e2723;
  line-height: 1.5;
  font-family: 'Courier New', 'Courier Prime', monospace;
  letter-spacing: 0.5rpx;
}

/* 技能样式 */
.skill-category {
  margin-bottom: 30rpx;
}

.category-title {
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #5d4037;
  font-family: 'Courier New', 'Courier Prime', monospace;
  letter-spacing: 0.6rpx;
}

.skill-item {
  margin-bottom: 25rpx;
  margin-left: 20rpx;
}

.skill-name {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  color: #3e2723;
  font-weight: bold;
  font-family: 'Courier New', 'Courier Prime', monospace;
  letter-spacing: 0.5rpx;
}

.skill-bar {
  height: 10rpx;
  background-color: #d7ccc8;
  border-radius: 5rpx;
  overflow: hidden;
}

.skill-level {
  height: 100%;
  background-color: #8b4513;
  border-radius: 5rpx;
}